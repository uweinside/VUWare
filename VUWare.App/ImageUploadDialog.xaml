<Window x:Class="VUWare.App.ImageUploadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Upload Dial Image"
        Height="500"
        Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#2a2a2a"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <!-- Modern Flat Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005a9e"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#3a3a3a"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3a3a3a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4a4a4a"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2a2a2a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="#2a2a2a" CornerRadius="8" BorderBrush="#444444" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="0,0,0,1" Height="40" Grid.Row="0" CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="DialogTitle" Text="Upload Image for Dial #1" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#CCCCCC" FontSize="14" FontWeight="Bold" Grid.Column="0"/>
                    <Button x:Name="CloseButton" Click="CloseButton_Click" Width="40" Height="40" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Content="?" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1"/>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Instructions -->
                <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="1" CornerRadius="4" Padding="15" Grid.Row="0" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Upload Custom Dial Face Image" FontSize="13" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,0,0,10"/>
                        <TextBlock Text="- Supported formats: PNG, BMP, JPEG" Foreground="#CCCCCC" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="- Image will be automatically scaled to 200x144 pixels" Foreground="#CCCCCC" FontSize="11" Margin="0,0,0,3"/>
                        <TextBlock Text="- Black and white images work best for e-paper display" Foreground="#CCCCCC" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- File Selection -->
                <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="1" CornerRadius="4" Padding="15" Grid.Row="1" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Select Image File" FontSize="12" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,0,0,10" Grid.Row="0"/>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="FilePathTextBox" IsReadOnly="True" Background="#2a2a2a" Foreground="#CCCCCC" 
                                   BorderBrush="#444444" BorderThickness="1" Padding="8" VerticalContentAlignment="Center"
                                   Grid.Column="0" Margin="0,0,10,0" Text="No file selected"/>
                            
                            <Button x:Name="BrowseButton" Content="Browse..." Click="BrowseButton_Click" 
                                  Style="{StaticResource ModernButton}" Width="120" Grid.Column="1"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Image Preview -->
                <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="1" CornerRadius="4" Padding="15" Grid.Row="2" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Preview (200x144 pixels)" FontSize="12" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,0,0,10" Grid.Row="0"/>
                        
                        <Border Grid.Row="1" Background="#FFFFFF" BorderBrush="#444444" BorderThickness="1" 
                              HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image x:Name="PreviewImage" Width="200" Height="144" Stretch="None" 
                                 RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Upload Status -->
                <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="1" CornerRadius="4" Padding="10" Grid.Row="3">
                    <TextBlock x:Name="StatusText" Text="Ready to upload" Foreground="#888888" FontSize="11" TextWrapping="Wrap"/>
                </Border>
            </Grid>

            <!-- Button Bar -->
            <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="0,1,0,0" Height="60" Grid.Row="2" CornerRadius="0,0,8,8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0">
                    <Button x:Name="UploadButton" Click="UploadButton_Click" 
                          Style="{StaticResource ModernButton}"
                          Content="Upload" Margin="0,0,10,0" Width="120" IsEnabled="False"/>
                    <Button x:Name="CancelButton" Click="CancelButton_Click" 
                          Style="{StaticResource SecondaryButton}"
                          Content="Cancel" Width="120"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
