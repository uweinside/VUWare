<Window x:Class="VUWare.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VUWare.App"
        mc:Ignorable="d"
        Title="VU1 Dial Sensor Monitor"
        Height="250"
        Width="656"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowState="Minimized"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <Style x:Key="DialPanelStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </Window.Resources>
    <Border Background="#2a2a2a" CornerRadius="8" Margin="0" Padding="0">
        <Grid VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Custom Title Bar -->
            <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="0,0,0,1" Height="30" Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="VU1 Dial Sensor Monitor" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#CCCCCC" FontSize="14" FontWeight="Bold" Grid.Column="0"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,5,0">
                        <Button x:Name="SettingsButton" Click="SettingsButton_Click" Width="30" Height="30" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Content="☰" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                        <Button x:Name="MinimizeButton" Click="MinimizeButton_Click" Width="30" Height="30" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Content="−" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" ToolTip="Minimize to Tray"/>
                        <Button x:Name="CloseButton" Click="CloseButton_Click" Width="30" Height="30" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Content="✕" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
            <!-- Dials Row -->
            <StackPanel Orientation="Horizontal" Margin="0,15,0,2" Grid.Row="1" HorizontalAlignment="Center">
                <Border Background="#000000" CornerRadius="8" Padding="10" Margin="5" Width="140" Height="140">
                    <Grid>
                        <Border x:Name="Dial1Button" Style="{StaticResource DialPanelStyle}" Width="120" Height="80" VerticalAlignment="Top">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="Dial1Percentage" Text="--" FontSize="28" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
                                <TextBlock x:Name="Dial1DisplayName" Text="CPU Load" FontSize="9" TextAlignment="Center" Foreground="#666666" TextTrimming="CharacterEllipsis" Grid.Row="1" Margin="0,2,0,8"/>
                            </Grid>
                        </Border>
                        <Button x:Name="Dial1ConfigButton" Content="☰" FontSize="12" Width="18" Height="18" 
                                Background="Transparent" BorderThickness="0" Foreground="#777777" 
                                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                Margin="0,0,4,4" Padding="0" Opacity="0.7"
                                ToolTip="Configure Dial 1">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                            <Setter Property="Opacity" Value="1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                <Border Background="#000000" CornerRadius="8" Padding="10" Margin="5" Width="140" Height="140">
                    <Grid>
                        <Border x:Name="Dial2Button" Style="{StaticResource DialPanelStyle}" Width="120" Height="80" VerticalAlignment="Top">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="Dial2Percentage" Text="--" FontSize="28" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
                                <TextBlock x:Name="Dial2DisplayName" Text="CPU Temperature" FontSize="9" TextAlignment="Center" Foreground="#666666" TextTrimming="CharacterEllipsis" Grid.Row="1" Margin="0,2,0,8"/>
                            </Grid>
                        </Border>
                        <Button x:Name="Dial2ConfigButton" Content="☰" FontSize="12" Width="18" Height="18" 
                                Background="Transparent" BorderThickness="0" Foreground="#777777" 
                                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                Margin="0,0,4,4" Padding="0" Opacity="0.7"
                                ToolTip="Configure Dial 2">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                            <Setter Property="Opacity" Value="1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                <Border Background="#000000" CornerRadius="8" Padding="10" Margin="5" Width="140" Height="140">
                    <Grid>
                        <Border x:Name="Dial3Button" Style="{StaticResource DialPanelStyle}" Width="120" Height="80" VerticalAlignment="Top">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="Dial3Percentage" Text="--" FontSize="28" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
                                <TextBlock x:Name="Dial3DisplayName" Text="GPU Load" FontSize="9" TextAlignment="Center" Foreground="#666666" TextTrimming="CharacterEllipsis" Grid.Row="1" Margin="0,2,0,8"/>
                            </Grid>
                        </Border>
                        <Button x:Name="Dial3ConfigButton" Content="☰" FontSize="12" Width="18" Height="18" 
                                Background="Transparent" BorderThickness="0" Foreground="#777777" 
                                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                Margin="0,0,4,4" Padding="0" Opacity="0.7"
                                ToolTip="Configure Dial 3">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                            <Setter Property="Opacity" Value="1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                <Border Background="#000000" CornerRadius="8" Padding="10" Margin="5" Width="140" Height="140">
                    <Grid>
                        <Border x:Name="Dial4Button" Style="{StaticResource DialPanelStyle}" Width="120" Height="80" VerticalAlignment="Top">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="Dial4Percentage" Text="--" FontSize="28" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
                                <TextBlock x:Name="Dial4DisplayName" Text="GPU Temperature" FontSize="9" TextAlignment="Center" Foreground="#666666" TextTrimming="CharacterEllipsis" Grid.Row="1" Margin="0,2,0,8"/>
                            </Grid>
                        </Border>
                        <Button x:Name="Dial4ConfigButton" Content="☰" FontSize="12" Width="18" Height="18" 
                                Background="Transparent" BorderThickness="0" Foreground="#777777" 
                                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                Margin="0,0,4,4" Padding="0" Opacity="0.7"
                                ToolTip="Configure Dial 4">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                            <Setter Property="Opacity" Value="1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </StackPanel>
            <!-- Status Row -->
            <TextBlock x:Name="StatusText" Text="Initializing" FontSize="16" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,13" Grid.Row="2"/>
        </Grid>
    </Border>
</Window>
