<Window x:Class="VUWare.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VUWare.App"
        mc:Ignorable="d"
        Title="VU/WARE 1.0.0"
        Height="250"
        Width="656"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True" Icon="/VU1_Icon.png">
    <Window.Resources>
        <Style x:Key="DialPanelStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <!-- Settings Button Style with custom disabled state -->
        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333333"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#222222"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#3a3a3a"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border Background="#2a2a2a" CornerRadius="8" Margin="0" Padding="0">
        <Grid VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Custom Title Bar -->
            <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="0,0,0,1" Height="30" Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="VU/WARE 1.0.0" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#333333" FontSize="14" FontWeight="Bold" Grid.Column="0"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,5,0">
                        <Button x:Name="InfoButton" 
                                Click="InfoButton_Click" 
                                Style="{StaticResource SettingsButtonStyle}"
                                Width="30" 
                                Height="30" 
                                Content="ℹ" 
                                FontSize="15" 
                                VerticalContentAlignment="Center" 
                                HorizontalContentAlignment="Center" 
                                ToolTip="About"/>
                        <Button x:Name="SettingsButton" 
                                Click="SettingsButton_Click" 
                                Style="{StaticResource SettingsButtonStyle}"
                                Width="30" 
                                Height="30" 
                                Content="☰" 
                                FontSize="16" 
                                VerticalContentAlignment="Center" 
                                HorizontalContentAlignment="Center" 
                                ToolTip="Settings (available after initialization)"/>
                        <Button x:Name="MinimizeButton" Click="MinimizeButton_Click" Width="30" Height="30" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Content="−" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" ToolTip="Minimize to Tray"/>
                        <Button x:Name="CloseButton" Click="CloseButton_Click" Width="30" Height="30" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Content="✕" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
            <!-- Dials Row -->
            <StackPanel x:Name="DialsPanel" Orientation="Horizontal" Margin="0,15,0,2" Grid.Row="1" HorizontalAlignment="Center">
                <Border x:Name="Dial1Container" Background="#000000" CornerRadius="8" Padding="10" Margin="5" Width="140" Height="140">
                    <Border x:Name="Dial1Button" Style="{StaticResource DialPanelStyle}" Width="120" Height="80" VerticalAlignment="Top">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="Dial1Percentage" Text="--" FontSize="20" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
                            <TextBlock x:Name="Dial1DisplayName" Text="CPU Load" FontSize="9" TextAlignment="Center" Foreground="#666666" TextTrimming="CharacterEllipsis" Grid.Row="1" Margin="0,2,0,8"/>
                        </Grid>
                    </Border>
                </Border>
                <Border x:Name="Dial2Container" Background="#000000" CornerRadius="8" Padding="10" Margin="5" Width="140" Height="140">
                    <Border x:Name="Dial2Button" Style="{StaticResource DialPanelStyle}" Width="120" Height="80" VerticalAlignment="Top">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="Dial2Percentage" Text="--" FontSize="20" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
                            <TextBlock x:Name="Dial2DisplayName" Text="CPU Temperature" FontSize="9" TextAlignment="Center" Foreground="#666666" TextTrimming="CharacterEllipsis" Grid.Row="1" Margin="0,2,0,8"/>
                        </Grid>
                    </Border>
                </Border>
                <Border x:Name="Dial3Container" Background="#000000" CornerRadius="8" Padding="10" Margin="5" Width="140" Height="140">
                    <Border x:Name="Dial3Button" Style="{StaticResource DialPanelStyle}" Width="120" Height="80" VerticalAlignment="Top">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="Dial3Percentage" Text="--" FontSize="20" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
                            <TextBlock x:Name="Dial3DisplayName" Text="GPU Load" FontSize="9" TextAlignment="Center" Foreground="#666666" TextTrimming="CharacterEllipsis" Grid.Row="1" Margin="0,2,0,8"/>
                        </Grid>
                    </Border>
                </Border>
                <Border x:Name="Dial4Container" Background="#000000" CornerRadius="8" Padding="10" Margin="5" Width="140" Height="140">
                    <Border x:Name="Dial4Button" Style="{StaticResource DialPanelStyle}" Width="120" Height="80" VerticalAlignment="Top">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="Dial4Percentage" Text="--" FontSize="20" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
                            <TextBlock x:Name="Dial4DisplayName" Text="GPU Temperature" FontSize="9" TextAlignment="Center" Foreground="#666666" TextTrimming="CharacterEllipsis" Grid.Row="1" Margin="0,2,0,8"/>
                        </Grid>
                    </Border>
                </Border>
            </StackPanel>
            <!-- Welcome Panel (First Run) -->
            <Border x:Name="WelcomePanel" Grid.Row="1" Visibility="Collapsed" 
                    Background="Transparent" Margin="0,15,0,2" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Height="140">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock FontFamily="pack://application:,,,/Fonts/#Bungee"
                               FontSize="70" 
                               TextAlignment="Center"
                               HorizontalAlignment="Center">
                        <Run Text="VU" Foreground="#FFD6D9DA"/><Run Text="/">
                            <Run.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FF4444" Offset="0.0"/>
                                    <GradientStop Color="#FF4444" Offset="0.8"/>
                                    <GradientStop Color="#FFD6D9DA" Offset="0.8"/>
                                    <GradientStop Color="#FFD6D9DA" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Run.Foreground>
                        </Run><Run Text="WARE" Foreground="#FFD6D9DA"/>
                    </TextBlock>
                    <TextBlock Text="Where Performance Meets Dial" 
                               FontSize="16"
                               Foreground="#888888" 
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"/>
                </StackPanel>
            </Border>
            <!-- Status Row -->
            <TextBlock x:Name="StatusText" Text="Initializing" FontSize="16" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,13" Grid.Row="2"/>
        </Grid>
    </Border>
</Window>
