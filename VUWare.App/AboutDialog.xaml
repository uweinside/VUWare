<Window x:Class="VUWare.App.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VUWare.App"
        mc:Ignorable="d"
        Title="About VU1 Dial Sensor Monitor"
        Height="450"
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#2a2a2a"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <!-- Close Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005a9e"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ScrollBar Thumb Style -->
        <Style x:Key="DarkScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="ThumbBorder" Background="#555555" CornerRadius="3"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ThumbBorder" Property="Background" Value="#666666"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="ThumbBorder" Property="Background" Value="#777777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ScrollBar Style -->
        <Style x:Key="DarkScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track" IsDirectionReversed="True" Margin="1">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource DarkScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ScrollViewer Style -->
        <Style x:Key="DarkScrollViewer" TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar" 
                                     Grid.Column="1" 
                                     Margin="10,0,0,0"
                                     Style="{StaticResource DarkScrollBar}"
                                     Value="{TemplateBinding VerticalOffset}"
                                     Maximum="{TemplateBinding ScrollableHeight}"
                                     ViewportSize="{TemplateBinding ViewportHeight}"
                                     Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="#2a2a2a" CornerRadius="8" BorderBrush="#444444" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="0,0,0,1" Height="40" Grid.Row="0" CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="About" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#CCCCCC" FontSize="16" FontWeight="Bold" Grid.Column="0"/>
                    <Button x:Name="CloseButton" Click="CloseButton_Click" Width="40" Height="40" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Content="&#x2715;" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" 
                        Style="{StaticResource DarkScrollViewer}"
                        VerticalScrollBarVisibility="Auto" 
                        Margin="20,20,20,20">
                <StackPanel>
                    <Border x:Name="LogoPanel" Visibility="Visible" 
                            Background="Transparent" Margin="0,0,0,0" 
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Height="100">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock FontFamily="pack://application:,,,/Fonts/#Bungee"
                                       FontSize="40" 
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center">
                                <Run Text="VU" Foreground="#FFD6D9DA"/><Run Text="/">
                                    <Run.Foreground>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF4444" Offset="0.0"/>
                                            <GradientStop Color="#FF4444" Offset="0.8"/>
                                            <GradientStop Color="#FFD6D9DA" Offset="0.8"/>
                                            <GradientStop Color="#FFD6D9DA" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Run.Foreground>
                                </Run><Run Text="WARE" Foreground="#FFD6D9DA"/>
                            </TextBlock>
                            <TextBlock Text="Where Performance Meets Dial" 
                                       FontSize="14"
                                       Foreground="#888888" 
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,0"/>
                            <TextBlock x:Name="VersionText"
                                       Text="Version 1.0.0"
                                       FontSize="12"
                                       Foreground="#666666" 
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Separator -->
                    <Border Height="1" Background="#444444" Margin="0,8,0,20"/>

                    <!-- App Description -->
                    <TextBlock FontSize="12" 
                             Foreground="#CCCCCC" 
                             Margin="0,0,0,10" 
                             TextWrapping="Wrap"
                             TextAlignment="Left">
                        <Run Text="A desktop application that brings your PC's hardware sensor data to life on VU1 analog-style dials. Monitor CPU temperature, GPU usage, and more with beautiful retro-style gauges developed by "/><Hyperlink x:Name="DescriptionAuthorLink" Foreground="#0078d4" TextDecorations="None" RequestNavigate="Hyperlink_RequestNavigate"><Run Text="Sasa Karanovic"/></Hyperlink><Run Text="."/>
                    </TextBlock>
                    
                    <TextBlock FontSize="12" 
                             Foreground="#CCCCCC" 
                             Margin="0,0,0,10" 
                             TextWrapping="Wrap"
                             TextAlignment="Left">
                        <Run Text="Learn more about the VU1 hardware on the official "/><Hyperlink x:Name="VUDialsLink" Foreground="#0078d4" TextDecorations="None" RequestNavigate="Hyperlink_RequestNavigate"><Run Text="VU Dials website"/></Hyperlink><Run Text=". The source code for this application is available on "/><Hyperlink x:Name="GitHubLink" Foreground="#0078d4" TextDecorations="None" RequestNavigate="Hyperlink_RequestNavigate"><Run Text="GitHub"/></Hyperlink><Run Text="."/>
                    </TextBlock>
                    
                    <TextBlock FontSize="12" 
                             Foreground="#CCCCCC" 
                             Margin="0,0,0,20" 
                             TextWrapping="Wrap"
                             TextAlignment="Left">
                        <Run Text="This app uses "/><Hyperlink x:Name="HWiNFO64Link" Foreground="#0078d4" TextDecorations="None" RequestNavigate="Hyperlink_RequestNavigate"><Run Text="HWiNFO64"/></Hyperlink><Run Text=" for real-time hardware sensor monitoring. Visit the "/><Hyperlink x:Name="HWiNFOLink" Foreground="#0078d4" TextDecorations="None" RequestNavigate="Hyperlink_RequestNavigate"><Run Text="HWiNFO website"/></Hyperlink><Run Text=" to download and configure this essential companion software."/>
                    </TextBlock>

                    <!-- Copyright Information -->
                    <TextBlock Text="Copyright Information" 
                             FontSize="14" 
                             FontWeight="Bold" 
                             Foreground="#CCCCCC" 
                             Margin="0,0,0,5"/>
                    
                    <TextBlock FontSize="12" Foreground="#CCCCCC" Margin="0,0,0,5" TextWrapping="Wrap">
                        <Run Text="&#x00A9; 2024 "/><Hyperlink x:Name="CopyrightLink" Foreground="#0078d4" TextDecorations="None" RequestNavigate="Hyperlink_RequestNavigate"><Run Text="Uwe Baumann"/></Hyperlink>
                    </TextBlock>
                    
                    <TextBlock Text="All rights reserved." 
                             FontSize="12" 
                             Foreground="#CCCCCC" 
                             Margin="0,0,0,20" 
                             TextWrapping="Wrap"/>

                    <!-- Attribution -->
                    <TextBlock Text="Attribution" 
                             FontSize="14" 
                             FontWeight="Bold" 
                             Foreground="#CCCCCC" 
                             Margin="0,0,0,5"/>
                    
                    <TextBlock FontSize="12" Foreground="#CCCCCC" Margin="0,0,0,20" TextWrapping="Wrap">
                        <Run Text="The VU1 Dial Control Library was originally developed by "/><Hyperlink x:Name="OriginalAuthorLink" Foreground="#0078d4" TextDecorations="None" RequestNavigate="Hyperlink_RequestNavigate"><Run Text="Sasa Karanovic"/></Hyperlink><Run Text="."/>
                    </TextBlock>

                    <!-- License -->
                    <TextBlock Text="License" 
                             FontSize="14" 
                             FontWeight="Bold" 
                             Foreground="#CCCCCC" 
                             Margin="0,0,0,5"/>
                    
                    <TextBlock FontSize="12" Foreground="#CCCCCC" Margin="0,0,0,5" TextWrapping="Wrap">
                        <Run Text="This software is licensed under the "/><Hyperlink x:Name="LicenseLink" Foreground="#0078d4" TextDecorations="None" RequestNavigate="Hyperlink_RequestNavigate"><Run Text="MIT License"/></Hyperlink><Run Text="."/>
                    </TextBlock>
                    
                    <TextBlock Text="THE SOFTWARE IS PROVIDED 'AS IS', WITHOUT WARRANTY OF ANY KIND, EXPRESS OR IMPLIED, INCLUDING BUT NOT LIMITED TO THE WARRANTIES OF MERCHANTABILITY, FITNESS FOR A PARTICULAR PURPOSE AND NONINFRINGEMENT." 
                             FontSize="11" 
                             Foreground="#999999" 
                             Margin="0,0,0,10" 
                             TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Button Bar -->
            <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="0,1,0,0" Height="60" Grid.Row="2" CornerRadius="0,0,8,8">
                <Button x:Name="OKButton" 
                      Click="OKButton_Click" 
                      Style="{StaticResource ModernButton}"
                      Content="OK" 
                      Width="120" 
                      Height="35"
                      HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>
