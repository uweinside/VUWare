<Window x:Class="VUWare.App.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VUWare.App"
        mc:Ignorable="d"
        Title="About VU1 Dial Sensor Monitor"
        Height="450"
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#2a2a2a"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <!-- Close Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005a9e"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="#2a2a2a" CornerRadius="8" BorderBrush="#444444" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="0,0,0,1" Height="40" Grid.Row="0" CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="About" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#CCCCCC" FontSize="16" FontWeight="Bold" Grid.Column="0"/>
                    <Button x:Name="CloseButton" Click="CloseButton_Click" Width="40" Height="40" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Content="&#x2715;" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
                <StackPanel>
                    <!-- App Icon/Logo Area -->
                    <Border Background="#1a1a1a" CornerRadius="50" Width="100" Height="100" HorizontalAlignment="Center" Margin="0,20,0,20">
                        <TextBlock Text="&#x2699;" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0078d4"/>
                    </Border>

                    <!-- App Name and Version -->
                    <TextBlock Text="VU1 Dial Sensor Monitor" 
                             FontSize="20" 
                             FontWeight="Bold" 
                             Foreground="#FFFFFF" 
                             HorizontalAlignment="Center" 
                             Margin="0,0,0,5"/>
                    
                    <TextBlock x:Name="VersionText" 
                             Text="Version 1.0.0" 
                             FontSize="12" 
                             Foreground="#CCCCCC" 
                             HorizontalAlignment="Center" 
                             Margin="0,0,0,20"/>

                    <!-- Separator -->
                    <Border Height="1" Background="#444444" Margin="0,10,0,20"/>

                    <!-- Copyright Information -->
                    <TextBlock Text="Copyright Information" 
                             FontSize="14" 
                             FontWeight="Bold" 
                             Foreground="#FFFF99" 
                             Margin="0,0,0,10"/>
                    
                    <TextBlock FontSize="12" Foreground="#CCCCCC" Margin="0,0,0,5" TextWrapping="Wrap">
                        <Run Text="&#x00A9; 2024 VUWare Contributors"/>
                    </TextBlock>
                    
                    <TextBlock Text="All rights reserved." 
                             FontSize="12" 
                             Foreground="#CCCCCC" 
                             Margin="0,0,0,20" 
                             TextWrapping="Wrap"/>

                    <!-- Attribution -->
                    <TextBlock Text="Attribution" 
                             FontSize="14" 
                             FontWeight="Bold" 
                             Foreground="#FFFF99" 
                             Margin="0,0,0,10"/>
                    
                    <TextBlock FontSize="12" Foreground="#CCCCCC" Margin="0,0,0,5" TextWrapping="Wrap">
                        <Run Text="VU1 Dial Control Library originally developed by "/>
                        <Hyperlink x:Name="OriginalAuthorLink" 
                                 Foreground="#0078d4" 
                                 TextDecorations="None"
                                 RequestNavigate="Hyperlink_RequestNavigate">
                            <Run Text="VU Dials"/>
                        </Hyperlink>
                    </TextBlock>
                    
                    <TextBlock Text="HWiNFO64 integration for real-time hardware monitoring" 
                             FontSize="12" 
                             Foreground="#CCCCCC" 
                             Margin="0,0,0,20" 
                             TextWrapping="Wrap"/>

                    <!-- Links -->
                    <TextBlock Text="Links" 
                             FontSize="14" 
                             FontWeight="Bold" 
                             Foreground="#FFFF99" 
                             Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="GitHub: " FontSize="12" Foreground="#CCCCCC"/>
                        <TextBlock FontSize="12">
                            <Hyperlink x:Name="GitHubLink" 
                                     Foreground="#0078d4" 
                                     TextDecorations="None"
                                     RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="https://github.com/uweinside/VUWare"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="VU Dials: " FontSize="12" Foreground="#CCCCCC"/>
                        <TextBlock FontSize="12">
                            <Hyperlink x:Name="VUDialsLink" 
                                     Foreground="#0078d4" 
                                     TextDecorations="None"
                                     RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="https://vudials.com"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="HWiNFO: " FontSize="12" Foreground="#CCCCCC"/>
                        <TextBlock FontSize="12">
                            <Hyperlink x:Name="HWiNFOLink" 
                                     Foreground="#0078d4" 
                                     TextDecorations="None"
                                     RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="https://www.hwinfo.com"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <!-- License -->
                    <TextBlock Text="License" 
                             FontSize="14" 
                             FontWeight="Bold" 
                             Foreground="#FFFF99" 
                             Margin="0,0,0,10"/>
                    
                    <TextBlock Text="This software is provided 'as-is', without any express or implied warranty." 
                             FontSize="11" 
                             Foreground="#999999" 
                             Margin="0,0,0,10" 
                             TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Button Bar -->
            <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="0,1,0,0" Height="60" Grid.Row="2" CornerRadius="0,0,8,8">
                <Button x:Name="OKButton" 
                      Click="OKButton_Click" 
                      Style="{StaticResource ModernButton}"
                      Content="OK" 
                      Width="120" 
                      HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>
