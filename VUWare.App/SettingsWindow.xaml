<Window x:Class="VUWare.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VUWare.App"
        xmlns:converters="clr-namespace:VUWare.App.Converters"
        mc:Ignorable="d"
        Title="Settings"
        Height="700"
        Width="900"
        ResizeMode="CanResize"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterOwner"
        Background="#2a2a2a"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <converters:ColorModeToVisibilityConverter x:Key="ColorModeToVisibilityConverter"/>
        
        <!-- Modern Flat Tab Style -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                Background="Transparent" 
                                BorderThickness="0" 
                                Padding="20,12"
                                Margin="4,0"
                                CornerRadius="8,8,0,0">
                            <ContentPresenter x:Name="ContentSite" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center" 
                                            ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0078d4"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#0078d4" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Flat Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005a9e"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#3a3a3a"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style (Cancel) -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3a3a3a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4a4a4a"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2a2a2a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="#2a2a2a" CornerRadius="8" BorderBrush="#444444" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="0,0,0,1" Height="40" Grid.Row="0" CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Configuration" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#CCCCCC" FontSize="16" FontWeight="Bold" Grid.Column="0"/>
                    <Button x:Name="CloseButton" Click="CloseButton_Click" Width="40" Height="40" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Content="?" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1"/>
                </Grid>
            </Border>

            <!-- Content Area with TabControl -->
            <TabControl Grid.Row="1" Background="#2a2a2a" BorderThickness="0" Margin="0">
                <TabControl.Resources>
                    <Style TargetType="TabControl">
                        <Setter Property="Background" Value="#2a2a2a"/>
                    </Style>
                </TabControl.Resources>
                
                <!-- Dial Configuration Tab -->
                <TabItem Header="Dial Configuration">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
                        <StackPanel x:Name="DialsPanel">
                            <TextBlock Text="Configure individual dial settings" 
                                     Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,15"/>
                            <!-- Dial configuration panels will be dynamically added here -->
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Application Settings Tab -->
                <TabItem Header="Application Settings">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
                        <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="1" CornerRadius="4" Padding="20">
                            <StackPanel>
                                <TextBlock Text="General Settings" FontSize="14" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,0,0,15"/>

                                <CheckBox x:Name="StartMinimizedCheckBox" Content="Start Minimized" 
                                        Foreground="#CCCCCC" Margin="0,0,0,15" IsChecked="{Binding StartMinimized}"/>

                                <CheckBox x:Name="AutoConnectCheckBox" Content="Auto-connect to VU1 Hub on startup" 
                                        Foreground="#CCCCCC" Margin="0,0,0,15" IsChecked="{Binding AutoConnect}"/>

                                <CheckBox x:Name="EnablePollingCheckBox" Content="Enable HWInfo64 Polling" 
                                        Foreground="#CCCCCC" Margin="0,0,0,15" IsChecked="{Binding EnablePolling}"/>

                                <CheckBox x:Name="DebugModeCheckBox" Content="Enable Debug Mode" 
                                        Foreground="#CCCCCC" Margin="0,0,0,20" IsChecked="{Binding DebugMode}"/>

                                <TextBlock Text="Performance Settings" FontSize="14" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,10,0,15"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="Global Update Interval (ms):" VerticalAlignment="Center" Foreground="#CCCCCC" Width="200"/>
                                    <TextBox x:Name="GlobalUpdateIntervalTextBox" Text="{Binding GlobalUpdateIntervalMs, UpdateSourceTrigger=PropertyChanged}" 
                                           Width="100" Height="25" Padding="8" Background="#2a2a2a" Foreground="#CCCCCC" BorderBrush="#444444"/>
                                    <TextBlock Text="Recommended: 500-1000" VerticalAlignment="Center" Foreground="#888888" FontSize="10" Margin="10,0,0,0"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="Serial Command Delay (ms):" VerticalAlignment="Center" Foreground="#CCCCCC" Width="200"/>
                                    <TextBox x:Name="SerialCommandDelayTextBox" Text="{Binding SerialCommandDelayMs, UpdateSourceTrigger=PropertyChanged}" 
                                           Width="100" Height="25" Padding="8" Background="#2a2a2a" Foreground="#CCCCCC" BorderBrush="#444444"/>
                                    <TextBlock Text="Recommended: 50-200" VerticalAlignment="Center" Foreground="#888888" FontSize="10" Margin="10,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </ScrollViewer>
                </TabItem>

                <!-- Dial Images Tab -->
                <TabItem Header="Dial Images">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Upload custom dial face images" 
                                 Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,15" Grid.Row="0"/>

                        <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="1" CornerRadius="4" Padding="20" Grid.Row="1">
                            <StackPanel>
                                <TextBlock Text="Select a dial to upload an image:" Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,10"/>
                                
                                <ComboBox x:Name="DialSelectionComboBox" Height="30" Background="#2a2a2a" 
                                        Foreground="#CCCCCC" BorderBrush="#444444" Margin="0,0,0,15"
                                        SelectionChanged="DialSelectionComboBox_SelectionChanged">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DisplayName}" Foreground="#CCCCCC"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <Button x:Name="UploadImageButton" Content="Browse and Upload Image..." 
                                      Click="UploadImageButton_Click" 
                                      Style="{StaticResource ModernButton}"
                                      Width="220" HorizontalAlignment="Left" IsEnabled="False"/>

                                <TextBlock Text="Supported formats: PNG, BMP, JPEG (will be converted to 200x144 pixels)" 
                                         Foreground="#888888" FontSize="10" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="1" CornerRadius="4" 
                              Padding="20" Grid.Row="2" Margin="0,15,0,0">
                            <StackPanel>
                                <TextBlock Text="Upload Status" FontSize="12" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,0,0,10"/>
                                <TextBlock x:Name="ImageUploadStatusText" Text="No image uploaded" 
                                         Foreground="#888888" FontSize="11" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Button Bar -->
            <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="0,1,0,0" Height="60" Grid.Row="2" CornerRadius="0,0,8,8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0">
                    <Button x:Name="ApplyButton" Click="ApplyButton_Click" 
                          Style="{StaticResource ModernButton}"
                          Content="Apply" Margin="0,0,10,0"/>
                    <Button x:Name="OKButton" Click="OKButton_Click" 
                          Style="{StaticResource ModernButton}"
                          Content="OK" Margin="0,0,10,0"/>
                    <Button x:Name="CancelButton" Click="CancelButton_Click" 
                          Style="{StaticResource SecondaryButton}"
                          Content="Cancel"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
