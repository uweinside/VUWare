<Window x:Class="VUWare.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VUWare.App"
        xmlns:converters="clr-namespace:VUWare.App.Converters"
        mc:Ignorable="d"
        Title="Settings"
        Height="700"
        Width="900"
        ResizeMode="CanResize"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterOwner"
        Background="#2a2a2a"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <converters:ColorModeToVisibilityConverter x:Key="ColorModeToVisibilityConverter"/>
        
        <!-- Modern Flat Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005a9e"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#3a3a3a"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style (Cancel) -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3a3a3a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4a4a4a"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2a2a2a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ScrollBar Thumb Style -->
        <Style x:Key="DarkScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="ThumbBorder" Background="#555555" CornerRadius="3"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ThumbBorder" Property="Background" Value="#666666"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="ThumbBorder" Property="Background" Value="#777777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ScrollBar Style -->
        <Style x:Key="DarkScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track" IsDirectionReversed="True" Margin="1">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource DarkScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ScrollViewer Style -->
        <Style x:Key="DarkScrollViewer" TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar" 
                                     Grid.Column="1" 
                                     Margin="10,0,0,0"
                                     Style="{StaticResource DarkScrollBar}"
                                     Value="{TemplateBinding VerticalOffset}"
                                     Maximum="{TemplateBinding ScrollableHeight}"
                                     ViewportSize="{TemplateBinding ViewportHeight}"
                                     Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="#2a2a2a" CornerRadius="8" BorderBrush="#444444" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="0,0,0,1" Height="40" Grid.Row="0" CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Configuration" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#CCCCCC" FontSize="16" FontWeight="Bold" Grid.Column="0"/>
                    <Button x:Name="CloseButton" Click="CloseButton_Click" Width="40" Height="40" Background="Transparent" BorderThickness="0" Foreground="#CCCCCC" Content="âœ•" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area with ScrollViewer -->
            <ScrollViewer Grid.Row="1" 
                        Style="{StaticResource DarkScrollViewer}"
                        VerticalScrollBarVisibility="Auto" 
                        Margin="15">
                <StackPanel>
                    <!-- General Settings Section -->
                    <TextBlock Text="General Settings" FontSize="14" FontWeight="Bold" Foreground="#FFFFFF" Margin="15,0,0,4"/>
                    <TextBlock Text="Other settings can be edited in the configuration file." 
                             Foreground="#CCCCCC" FontSize="12" Margin="15,0,0,12"/>

                    <Border x:Name="GeneralSettingsBorder" Background="#1a1a1a" BorderBrush="#444444" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Startup Configuration" FontSize="12" FontWeight="Bold" Foreground="#FFFF99" Margin="0,3,0,14"/>
                            <CheckBox x:Name="StartMinimizedCheckBox" Content="Minimize at Startup" 
                                    Foreground="#CCCCCC" Margin="0,0,0,10" IsChecked="{Binding StartMinimized}"
                                    ToolTip="Application will start minimized to system tray"/>
                       
                        </StackPanel>
                    </Border>

                    <!-- Dial Configuration Section -->
                    <TextBlock Text="Dial Configuration" FontSize="14" FontWeight="Bold" Foreground="#FFFFFF" Margin="15,5,0,4"/>
                    <TextBlock Text="Configure individual dial settings" 
                             Foreground="#CCCCCC" FontSize="12" Margin="15,0,0,12"/>
                    
                    <StackPanel x:Name="DialsPanel">
                        <!-- Dial configuration panels will be dynamically added here -->
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Button Bar -->
            <Border Background="#1a1a1a" BorderBrush="#444444" BorderThickness="0,1,0,0" Height="60" Grid.Row="2" CornerRadius="0,0,8,8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0">
                    <Button x:Name="ApplyButton" Click="ApplyButton_Click" 
                          Style="{StaticResource ModernButton}"
                          Content="Apply" Margin="0,0,10,0" Width="120"/>
                    <Button x:Name="OKButton" Click="OKButton_Click" 
                          Style="{StaticResource ModernButton}"
                          Content="OK" Margin="0,0,10,0" Width="120"/>
                    <Button x:Name="CancelButton" Click="CancelButton_Click" 
                          Style="{StaticResource SecondaryButton}"
                          Content="Cancel" Width="120"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
